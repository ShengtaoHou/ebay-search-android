<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp">


    <LinearLayout
        android:id="@+id/resultBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/resultBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/resultBar_normal"
            android:gravity="center"
            android:text="Showing " />
        <TextView
            android:id="@+id/resultBar2"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/resultBar_highlight"
            android:text="50" />
        <TextView
            android:id="@+id/resultBar3"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/resultBar_normal"
            android:text=" results for " />
        <TextView
            android:id="@+id/resultBar4"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/resultBar_highlight"
            android:text="iphone" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNumbers"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progress_bar1"
        style="?android:attr/progressBarStyle"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="175dp"
        android:layout_marginEnd="161dp" />

    <TextView
        android:id="@+id/progress_bar_label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/progress_bar1"
        android:layout_marginLeft="150dp"
        android:layout_marginBottom="-24dp"
        android:background="#00000000"
        android:gravity="center"
        android:text="Search Products..." />
</RelativeLayout>